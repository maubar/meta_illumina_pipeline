manifest {
    homePage = 'https://github.com/maubarsom/meta_illumina_pipeline'
    description = 'Andersson's lab Viral Discovery pipeline'
    mainScript = 'discovery.nf'
}

/* Pipeline running parameters
params{
  min_ctg_size=500
}

profiles {
  hamlet {
    includeConfig 'conf/hamlet.tools.config'
    includeConfig 'conf/hamlet.db.config'
  }

  bianca {
    includeConfig 'conf/bianca.tools.config'
    includeConfig 'conf/bianca.db.config'
  }
}

report {
    enabled = true
    file = "preprocessing_report.html"
}

timeline {
    enabled = true
    file = "preprocessing_timeline.html"
}

trace{
  enabled = true
  file = "preprocessing_trace.html"
  fields='task_id,hash,native_id,process,tag,name,status,exit,submit,start,complete,duration'
}
